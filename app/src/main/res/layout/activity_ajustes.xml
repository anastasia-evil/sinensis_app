<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6073B1">


    <include
        android:id="@+id/include"
        layout="@layout/imagen_fija"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="177dp"
        android:layout_height="59dp"
        android:fontFamily="@font/fresca"
        android:text="Ajustes"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        tools:layout_editor_absoluteX="0dp">


        <Button
            android:id="@+id/sobre_app"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:fontFamily="@font/fresca"
            android:onClick="onClick"
            android:text="Sobre Sinensis"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/sobre_nosotras"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fresca"
            android:onClick="onClick"
            android:text="Sobre las desarroladoras"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ods"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fresca"
            android:onClick="onClick"
            android:text="Sobre las ODS"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/misdatos"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fresca"
            android:onClick="onClick"
            android:text="Mis Datos"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/notificaciones"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fresca"
            android:onClick="onClick"
            android:text="Notificaciones"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/atras"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/fresca"
        android:onClick="onClick"
        android:text="atras"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>